<UserControl x:Class="Zadanie2.View.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightGray" Width="182" Height="154">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Логин:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" Text="{Binding Employee_Login}" Margin="0,0,0,5"/>

        <TextBlock Grid.Row="2" Text="Пароль:" Margin="0,5,0,10"/>
        <TextBox Grid.Row="2" Text="{Binding Employee_Password}" Margin="0,26,0,-21"/>

        <Button Grid.Row="2" Content="Войти" Command="{Binding LoginCommand}" Background="SkyBlue" Margin="0,57,0,-47"/>
    </Grid>
</UserControl>